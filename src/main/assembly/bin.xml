<?xml version="1.0" encoding="utf-8"?>
<assembly>
	<id>installer</id>
	<formats>
		<format>jar</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
		<fileSet>
			<directory>src/main/release/conf</directory>
			<outputDirectory>${project.artifactId}-${project.version}/conf</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>src/main/release/scripts
			</directory>
			<outputDirectory>${project.artifactId}-${project.version}/</outputDirectory>
		</fileSet>
        <fileSet>
            <directory>src/main/release/ant-installer
            </directory>
            <outputDirectory>/</outputDirectory>
            <filtered>true</filtered>
        </fileSet>
        <fileSet>
            <directory>target/installer</directory>
            <outputDirectory>/</outputDirectory>
        </fileSet>
	</fileSets>
	<dependencySets>
		<dependencySet>
			<outputDirectory>${project.artifactId}-${project.version}/lib</outputDirectory>
			<unpack>false</unpack>
			<scope>runtime</scope>
			<excludes>
				<exclude>axis:axis-jaxrpc</exclude>
				<exclude>axis:axis-saaj</exclude>
				<exclude>commons-beanutils:commons-beanutils
				</exclude>
				<exclude>commons-discovery:commons-discovery
				</exclude>
				<exclude>hsqldb:hsqldb</exclude>
				<exclude>org.apache.portals.jetspeed-2:jetspeed-prefs
				</exclude>
				<exclude>javax.transaction:jta</exclude>
				<exclude>maven:maven-javacc-plugin
				</exclude>
				<exclude>nekohtml:nekohtml</exclude>
				<exclude>quartz:quartz:jar</exclude>
				<exclude>xerces:xercesImpl</exclude>
				<exclude>xml-apis:xml-apis</exclude>
				<exclude>uba:xtmStubs</exclude>
				<exclude>ingrid:ingrid-iplug-admin-step1-management
				</exclude>
			</excludes>
		</dependencySet>
		<dependencySet>
			<outputDirectory>${project.artifactId}-${project.version}/webapp/step1</outputDirectory>
			<unpack>true</unpack>
			<includes>
				<include>ingrid:ingrid-iplug-admin-step1-management
				</include>
			</includes>
		</dependencySet>
	</dependencySets>
</assembly>
